{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@shared/*": ["src/shared/services/*", "src/shared/*"],
      "@posts/*": ["src/modules/posts/*"],
      "@users/*": ["src/modules/users/*"],
      "@confirmation-hash/*": ["src/modules/confirmation-hash/*"],
      "@security/*": ["src/modules/security/*"],
      "@recovery/*": ["src/modules/recovery/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@guards/*": ["src/guards/*"],
      "@decorators/*": ["src/decorators/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@exceptions/*": [
        "src/exceptions/users/*",
        "src/exceptions/auth/*",
        "src/exceptions/posts/*",
        "src/exceptions/recovery/*",
        "src/exceptions/validation/*",
        "src/exceptions/security/*",
        "src/exceptions/confirmation-hash/*"
      ],
      "@dto/*": [
        "src/dto/auth/*",
        "src/dto/posts/*",
        "src/dto/users/*",
        "src/dto/recovery/*",
        "src/dto/confirmation-hash/*",
        "src/dto/security/*"
      ],
      "@interfaces/*": [
        "src/libs/interfaces/*",
        "src/libs/interfaces/auth/*",
        "src/libs/interfaces/users/*",
        "src/libs/interfaces/cryptography/*",
        "src/libs/interfaces/email/*",
        "src/libs/interfaces/confirmation-hash/*",
        "src/libs/interfaces/security/*",
        "src/libs/interfaces/recovery/*",
        "src/libs/interfaces/common/*"
      ],
      "@enums/*": ["src/libs/enums/*"],
      "@regex/*": ["src/libs/regex/*"],
      "@pipes/*": ["src/pipes/*"],
      "@interceptors/*": ["src/interceptors/*"],
      "@email-templates/*": [
        "src/libs/email-templates/*",
        "src/libs/email-templates/security/*"
      ]
    }
  }
}
